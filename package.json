{
  "name": "vitepress-demo-preview",
  "version": "0.0.0",
  "description": "preview component of code and component in vitepress",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm plugin:build && pnpm component:build && pnpm docs:dev",
    "build": "pnpm plugin:build && pnpm component:build && pnpm docs:build",
    "component:build": "pnpm --filter=vitepress-demo-preview-component build",
    "plugin:build": "pnpm --filter=vitepress-demo-preview-plugin build",
    "docs:dev": "pnpm --filter=vitepress-demo-preview-docs dev",
    "docs:build": "pnpm --filter=vitepress-demo-preview-docs build",
    "docs:serve": "pnpm --filter=vitepress-demo-preview-docs serve",
    "changeset": "changeset",
    "changeset-version": "changeset version",
    "lint": "pnpm lint:prettier && pnpm lint:eslint",
    "lint:eslint": "eslint --fix {example,packages}/**/*.{js,ts,vue,jsx,tsx}",
    "lint:prettier": "prettier --write {example,packages}/**/*.{js,ts,vue,jsx,tsx,scss,css}",
    "prepare": "husky install",
    "commit": "git-cz",
    "release:changelog:major": "standard-version --release-as major",
    "release:changelog:minor": "standard-version --release-as minor",
    "release:changelog:patch": "standard-version --release-as patch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.24.3",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^18.7.8",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "{packages, example}/**/*.{js,ts,vue,jsx,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}